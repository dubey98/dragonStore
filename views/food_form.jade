extends layout

block content

    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for="name") Food : 
            input#name.form-control(type='text',placeholder='anything dragon eat' name='name' value=(undefined==food ? '' : food.name))
            label(for='description') Description : 
            input#description.form-control(type='textArea',placeholder='dragons should know what they eat' name='description' value=(undefined==food ? '' : food.description))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li= error.msg