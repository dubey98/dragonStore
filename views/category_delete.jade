extends layout

block content
    h1 #{title} : #{category.name}

    if category_dragon.length
        p #[strong Delete the following dragons before attempting to delete this category]

        div(style="margin-left :20px,margin-top:20px")

            h4 Dragons
            each dragon in category_dragon
                a(href=dragon.url) #{dragon.name}
                p #{dragon.description}
    else
        p Do you really want to delete this category ? 

        form(method='POST' action="")
            div.form-group
                input#id.form-control(type='hidden',name='id', required='true', value=category._id )
            button.btn.btn-danger(type='submit') Delete