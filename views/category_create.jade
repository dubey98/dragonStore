extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for="name") Category : 
            input#name.form-control(type='text',placeholder='name of category' name='name' value=(undefined==category ? '' : category.name))
            label(for='description') Description : 
            input#description.form-control(type='textArea',placeholder='what makes that unique' name='description' value=(undefined==category ? '' : category.description))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li= error.msg
    